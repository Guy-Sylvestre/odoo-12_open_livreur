<odoo>

    <record id="construction_mrp_bom" model="ir.ui.view">
        <field name="name">construction.mrp.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <field name="is_construction_project"/>
                <field name="project_title" />
                <field name="test" />
            </xpath>
            <xpath expr="//field[@name='product_tmpl_id']" position="replace">
                <field name="product_tmpl_id" context="{'default_type': 'product', 'type': 'consu', 'sale_ok': False}"/>
            </xpath>
            <xpath expr="//field[@name='product_qty']" position="replace">
                <field name="product_qty" attrs="{'invisible':[('is_construction_project','==',True)]}" />
            </xpath>
            <xpath expr="//field[@name='code']" position="replace">
                <field name="code" attrs="{'invisible':[('is_construction_project','==',True)]}" />
            </xpath>
            <xpath expr="//label[@for='product_qty']" position="replace">
                <label for="product_qty" attrs="{'invisible':[('is_construction_project','==',True)]}" />
            </xpath>
            <xpath expr="//field[@name='type']" position="replace">
                <field name="type" widget="radio" attrs="{'invisible':[('is_construction_project','==',True)]}" />
            </xpath>
        </field>
    </record>

    <record id="action_construction_projects" model="ir.actions.act_window">
        <field name="name">Projets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.bom</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem sequence="0" id="construction_root" name="Construction"/>

    <menuitem id="construction_projects_menu" parent="construction_root"
        name="Projets" action="action_construction_projects" sequence="1"/>
        
</odoo>